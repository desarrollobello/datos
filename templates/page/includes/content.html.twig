{% if not sidebar_first and not sidebar_second and not element_content  %}
  <div class="container-fluid">
    <div class="row">
      <div class="col-lg-3">
        {{ page.sidebar_second }}
      </div>
      <div class="col-lg-6">
        {{ page.content }}
      </div>
      <div class="col-lg-3">
        {{ page.sidebar_first }}
      </div>

    </div>
  </div>
{% elseif not sidebar_first and not element_content %}
  <div class="container">
    <div class="row">
      <div class="col-lg-8">
        {{ page.content }}
      </div>
      <div class="col-lg-4">
        {{ page.sidebar_first }}
      </div>
    </div>
  </div>
{% elseif not sidebar_second and not element_content %}
  <div class="container">
    <div class="row">
      <div class="col-lg-4">
        {{ page.sidebar_second }}
      </div>
      <div class="col-lg-8">
        {{ page.content }}
      </div>
    </div>
  </div>
{% elseif not element_content %}
  <div class="container">
    <div class="row">
      <div class="col-lg-8 offset-lg-2">
        {{ page.content }}
      </div>
    </div>
  </div>
{% endif %}

